<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:background="@drawable/white_grey_border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/face"
        android:id="@+id/profile_image"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/usernameId"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/comic_neue_bold"
            android:layout_toEndOf="@id/profile_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University"
            android:fontFamily="@font/comic_neue_bold"
            android:id="@+id/user_request_uniName"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_below="@id/usernameId"
            android:layout_toEndOf="@id/profile_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CourseName"
        android:fontFamily="@font/comic_neue_bold"
        android:layout_marginStart="5dp"
        android:id="@+id/courseNameId"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/user_request_uniName"
        android:layout_below="@id/usernameId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="courseYr"
        android:fontFamily="@font/comic_neue_bold"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:layout_below="@id/usernameId"
        android:layout_toEndOf="@id/courseNameId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_request_uniName"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/profile_image"
        android:text="Hobbies"
        android:fontFamily="@font/comic_neue_bold"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@id/usernameId"
        android:id="@+id/addUserRequest"
        android:background="@drawable/border"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add_icon"/>










</RelativeLayout>